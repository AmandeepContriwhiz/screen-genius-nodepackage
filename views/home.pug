  body
    div#root.home-page
        div.header_section
            div.container.top_container
                header.ScreenGenius-header
                    nav.navbar.navbar-expand-lg.navbar-light
                        div.container-fluid
                            a.navbar-brand(href='#')
                                img(src='images/home/logo.png', height='80', alt='CoolBrand')
                            button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNavAltMarkup', aria-controls='navbarNavAltMarkup', aria-expanded='false', aria-label='Toggle navigation')
                                span.navbar-toggler-icon
                        div#navbarNavAltMarkup.collapse.navbar-collapse
                            div.navbar-nav
                                a.nav-item.nav-link.active(href="/") Home
                                a.nav-item.nav-link(href='#screenshot-tab') Capture
                                a.nav-item.nav-link(href='#screen-recording-tab') Recorder
                                a.nav-item.nav-link(href='#pricing-plans-tab') Pricing
                                a.nav-item.nav-link(href='#frequently-asked-questions') FAQ
                            div.navbar-nav.ms-auto
                                if session !== null
                                    a.nav-item.nav-link.login(href='/dashboard') Dashboard
                                else 
                                    a.nav-item.nav-link.login(href='/login') Login
                                a.nav-item.nav-link.get_started(href='https://chrome.google.com/webstore/detail/screengenius-screenshot-s/eclnikmacpcandpbfjkjgnoicmlpkkdj', target='_blank') Get started
                div.container-fluid
                    div.row
                        div.col-lg-6.d-flex.flex-column.justify-content-center.ScreenGenius-mid
                            div.left-content
                                h2 Capture your screen like a pro!.
                                p Say Goodbye to bland Screen Captures! Take screenshots, record screen & effortlessly share with a dash of your awesome personality.
                                a.btn.btn-primary.chrome-thisbtn(href="https://chrome.google.com/webstore/detail/screengenius-screenshot-s/eclnikmacpcandpbfjkjgnoicmlpkkdj") Get Chrome Extension
                        div.col-lg-6.d-flex.flex-column.justify-content-center.ScreenGenius-mid
                            div#carouselExampleControls.carousel.slide(data-bs-ride='carousel')
                                div.carousel-indicators
                                    button.active(type="button" data-bs-target="#carouselExampleControls" data-bs-slide-to="0")
                                    button(type="button" data-bs-target="#carouselExampleControls" data-bs-slide-to="1")
                                    button(type="button" data-bs-target="#carouselExampleControls" data-bs-slide-to="2")
                                    button(type="button" data-bs-target="#carouselExampleControls" data-bs-slide-to="3")
                                div.carousel-inner
                                    div.carousel-item.active
                                        img.d-block.w-100(src='images/home/slider_1.png', alt='First slide')
                                    div.carousel-item
                                        img.d-block.w-100(src='images/home/slider_2.png', alt='Second slide')
                                    div.carousel-item
                                        img.d-block.w-100(src='images/home/slider_3.png', alt='Third slide')
                                    div.carousel-item   
                                        img.d-block.w-100(src='images/home/slider_4.png', alt='Fourth slide')
                            //-   button.carousel-control-prev(type='button', data-bs-target='#carouselExampleControls', data-bs-slide='prev')
